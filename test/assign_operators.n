fn main()
{
    let a : long = 1
    assert(a == 1)

    a += 4
    assert(a == 5)

    a -= 2
    assert(a == 3)

    a *= 2
    assert(a == 6)

    a /= 6
    assert(a == 1)

    a += 9
    a %= 8
    assert(a == 2)

    let b : float = 1.5
    assert(b == 1.5)

    b += 4.2
    assert(b == 5.7)

    b -= 2.2
    assert(b > 3.49 && b < 3.51)

    b *= 2.0
    assert(b > 6.99 && b < 7.01)

    b /= 2.0
    assert(b > 3.49 && b < 3.51)

    let c : bool = false
    assert(c == false)

    c ||= true
    assert(c == true)

    c &&= false
    assert(c == false)
} 